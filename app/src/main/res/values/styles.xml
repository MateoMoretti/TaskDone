<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Finanzas">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/verde</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/frijole</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="SpinnerItem">
        <item name="android:textSize">30dp</item>
        <item name="android:background">@drawable/fondo_blanco_redondeado</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:fontFamily">@font/jockey_one</item>
    </style>


    <style name="Titulos">
        <item name="android:color">@color/cardview_light_background</item>
        <item name="android:fontFamily">@font/frijole</item>
    </style>

</resources>