<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ItemAgenda"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/celda_tv"
        android:longClickable="true"
        style="@style/ItemAgenda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="my.life.tracker.agenda.fragments.AgendaFragment"
        tools:text="Actividad" />

    <ImageView
        android:id="@+id/celda_imageview"
        android:layout_width="@dimen/celda_height"
        android:layout_height="@dimen/celda_height"
        android:background="@drawable/selector_item_agenda"
        android:longClickable="true"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/comidas"
        tools:context="my.life.tracker.agenda.fragments.AgendaFragment"
        tools:text="Actividad" />

    <Spinner
        android:id="@+id/celda_spinner"
        style="@style/ItemAgenda"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="my.life.tracker.agenda.fragments.AgendaFragment"
        tools:text="Actividad" />

    <EditText
        android:id="@+id/celda_ed"
        style="@style/ItemAgenda"
        android:autofillHints=""
        android:imeOptions="actionDone"
        android:inputType="text"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="my.life.tracker.agenda.fragments.AgendaFragment" />

    <com.google.android.material.slider.Slider
        android:id="@+id/celda_slider"
        style="@style/ItemAgenda"
        android:theme="@style/MyMaterialTheme"
        android:stepSize="5.0"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        android:visibility="gone"
        android:enabled="false"
        android:contentDescription="@string/slider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
