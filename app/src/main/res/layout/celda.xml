<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:padding="2dp">


    <Spinner
        android:id="@+id/celda_spinner"
        android:layout_width="@dimen/celda_width"
        android:layout_height="@dimen/celda_height"
        android:background="@color/white"
        android:lines="1"
        android:maxLines="1"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:text="Actividad"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="my.life.tracker.agenda.fragments.AgendaFragment" />

    <TextView
        android:id="@+id/celda_tv"
        android:layout_width="@dimen/celda_width"
        android:layout_height="@dimen/celda_height"
        android:background="@color/white"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:text="Actividad"
        android:textColor="@color/text"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="my.life.tracker.agenda.fragments.AgendaFragment" />

    <EditText
        android:id="@+id/celda_ed"
        android:layout_width="@dimen/celda_width"
        android:layout_height="@dimen/celda_height"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:visibility="invisible"
        android:inputType="text"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="my.life.tracker.agenda.fragments.AgendaFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>
